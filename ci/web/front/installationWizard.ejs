<!doctype html>
<html lang="en" ng-app="koalitySetup">
<head>
<meta charset="utf-8">
<title>Koality</title>
<style type="text/css">[ng\:cloak], [ng-cloak], .ng-cloak { display: none !important; }</style>

<%- cssFiles %>

<style type="text/css">
	#installationWizard {
		width: 1000px;
		height: 600px;
	}

	#adminInformationForm, #awsInformationForm {
		display: inline-block;
		margin: 30px 0px 0px 30px;
		vertical-align: top;
	}

	#submitButton {
		float: right;
	}
</style>

</head>
<body>

	<div id="main">
		<div id="headerBackground"></div>

		<div id="centerContainer">
			<div id="headerContainer">
				<div id="header" unselectable>
					<span id="headerTitle" ng-click="visitHome()">Koality</span>
				</div>
			</div>

			<div id="contentContainer">
				<div class="prettyCenteredPanel" id="installationWizard">
					<div class="prettyContent">
						<div class="prettyContentHeader prettyContentHeaderPadding">Installation Wizard</div>
						<div class="prettyContentBody">
							<div id="adminInformationForm">
								<form class="prettyForm">
									<div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding">Admin email</div>
										<div class="prettyFormValue">
											<input type="email" placeholder="email@address.com">
										</div>
									</div>
									<div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding">Admin first name</div>
										<div class="prettyFormValue">
											<input type="text" placeholder="First">
										</div>
									</div>
									<div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding">Admin last name</div>
										<div class="prettyFormValue">
											<input type="text" placeholder="Last">
										</div>
									</div>
									<div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding">Admin password</div>
										<div class="prettyFormValue">
											<input type="password" placeholder="p4ssW0rd">
										</div>
									</div>
									<div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding">Admin confirm password</div>
										<div class="prettyFormValue">
											<input type="password" placeholder="p4ssW0rd, again">
										</div>
									</div>
								</form>
							</div>
							<div id="awsInformationForm">
								<form class="prettyForm">
									<div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding">Domain name</div>
										<div class="prettyFormValue">
											<input type="text" placeholder="koality.company.com">
										</div>
									</div>
									<div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding">AWS key</div>
										<div class="prettyFormValue">
											<input type="text" placeholder="aws key id">
										</div>
									</div>
									<div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding">Aws secret key</div>
										<div class="prettyFormValue">
											<input type="text" placeholder="aws secret key">
										</div>
									</div>
									<!-- <div class="prettyFormRow">
										<div class="prettyFormLabel labelPadding"></div>
										<div class="prettyFormValue">
											<button id="submitButton">Submit</button>
										</div>
									</div> -->
								</form>
							</div>
						</div>
						<div class="prettyContentFooter"></div>
					</div>
				</div>
			</div>
		</div>
	</div>

<%- jsFiles %>

</body>
</html>